{
  "name": "vscode-typescript-profiler",
  "displayName": "vscode-typescript-profiler",
  "description": "Take a trace of the typescript compiler from the editor.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-typescript-profiler.startTracing",
        "title": "TypeScript: Start tracing in tsserver"
      },
      {
        "command": "vscode-typescript-profiler.stopTracing",
        "title": "TypeScript: Stop tracing in tsserver"
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "tsserver-tracer-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile && cd plugin && pnpm run build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "open": "^10.1.0",
    "tsserver-tracer-plugin": "link:plugin"
  }
}
